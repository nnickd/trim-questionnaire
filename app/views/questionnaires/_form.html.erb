        <%= f.label "CSS:" %>
        <%= f.number_field :css %>
    </div>
    <div class="field">
        <%= f.label "WORKING ON A TEAM:" %>
        <%= f.number_field :team %>
    </div>
    <div class="field">
        <%= f.label "SELF MOTIVATION:" %>
        <%= f.number_field :motivation %>
    </div>
    <div class="field">
        <%= f.label "COMMUNICATION SKILLS:" %>
        <%= f.number_field :communication %>
    </div>
    <div class="field">
        <%= f.label "YOUR OWN ENERGY LEVEL:" %>
        <%= f.number_field :energy %>
    </div>
    <div class="field">
        <%= f.label "INTELLIGENCE / APTITUDE:" %>
        <%= f.number_field :aptitude %>
    </div>

    <div class="actions">
        <%= f.submit "SUBMIT" %>
    </div>
    <% end %>

</div>
